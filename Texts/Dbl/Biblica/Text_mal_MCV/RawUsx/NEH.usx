      <cell style="tcr2" align="end">1,254</cell>
    </row>
    <row style="tr">
      <cell style="tc1" align="start">
        <verse eid="NEH 7:34"/>
        <verse number="35" style="v" sid="NEH 7:35"/>ഹാരീമിൽനിന്നുള്ള പുരുഷന്മാർ </cell>
      <cell style="tcr2" align="end">320</cell>
    </row>
    <row style="tr">

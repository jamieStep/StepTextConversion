        <verse number="10" style="v"/>золотых чаш </cell>
      <cell style="tcr2" align="end">30</cell>
    </row>
    <row style="tr">
      <cell style="tc1" align="start">одинаковых серебряных чаш </cell>
      <cell style="tcr2" align="end">410</cell>
    </row>
